global
	log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
	log     global
	mode    http
	option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend ahmedsaadkader-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/www.ahmedsaadkader.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend ahmedsaadkader-backend

backend ahmedsaadkader-backend
	balance roundrobin
	server 530962-web-01 35.153.79.28:80 check
	server 530962-web-02 100.24.74.193:80 check
